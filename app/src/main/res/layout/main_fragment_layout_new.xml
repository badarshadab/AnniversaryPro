                                android:textColor="@color/text_col_mainScreen"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/birthday_invitation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/age_specif">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/birthday_invitation_image"
                                    android:layout_width="@dimen/_85sdp"
                                    android:layout_height="@dimen/_85sdp"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:layout_marginVertical="@dimen/_3sdp"
                                    android:adjustViewBounds="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/birthday_invitation"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:adjustViewBounds="true"
                                android:gravity="center|bottom"
                                android:text="@string/birthday_invitation"
                                android:textColor="@color/text_col_mainScreen"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <include
